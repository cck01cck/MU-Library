<body>
    <div class="sidenav">
        <div class="login-main-text">
           <h1>Application<br> Sign Up Page</h1>
        </div>
     </div>
     <div class="main">
        <div class="col-md-6 col-sm-12">
           <div class="login-form">
              <form action="/createAccount" method="POST">
                 <div class="form-group">
                    <label>User Name</label>
                    <input type="text" class="form-control" placeholder="User Name" name="user" required>
                 </div>
                 <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" placeholder="Password" name="password">
                 </div>
                 <input type="submit" class="btn btn-black" value="Create">
                 <a class="btn btn-secondary" href="/login">Back</a>
              </form>
           </div>
        </div>
     </div>
</body>

</html>